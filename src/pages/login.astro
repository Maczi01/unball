---
import Layout from "@/layouts/Layout.astro";
import LoginForm from "@/components/auth/LoginForm";

// Check if user is already authenticated
const { user } = Astro.locals;

// If already logged in, redirect to home
if (user) {
  return Astro.redirect("/");
}

// Get redirect URL from query params (for post-login redirect)
const redirectUrl = Astro.url.searchParams.get("redirect") || "/";
const errorMessage = Astro.url.searchParams.get("error");
---

<Layout title="Log In - FootyGuess Daily">
  <div
    class="relative w-full mx-auto min-h-screen bg-gradient-to-br from-green-900 via-emerald-900 to-teal-900 p-4 sm:p-8 flex items-center justify-center"
  >
    <div class="w-full max-w-md">
      <!-- Login Card -->
      <div
        class="backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 sm:p-10 text-white border border-white/10"
      >
        <!-- Header -->
        <div class="mb-8 text-center">
          <a
            href="/"
            class="inline-block text-3xl font-bold bg-gradient-to-r from-green-200 via-emerald-200 to-teal-200 text-transparent bg-clip-text drop-shadow-lg mb-4 hover:opacity-80 transition-opacity"
          >
            âš½ FootyGuess Daily
          </a>
          <h1 class="text-3xl font-bold text-white mb-2">Welcome Back</h1>
          <p class="text-emerald-100/80">Sign in to save your scores to the leaderboard</p>
        </div>

        <!-- Error Message -->
        {
          errorMessage && (
            <div
              class="mb-6 rounded-md border border-red-400/50 bg-red-500/10 px-4 py-3 text-sm text-red-200"
              role="alert"
            >
              {errorMessage}
            </div>
          )
        }

        <!-- Login Form -->
        <LoginForm client:load redirectUrl={redirectUrl} />

        <!-- Sign Up Link -->
        <div class="mt-6 text-center text-sm">
          <span class="text-emerald-100/70">Don't have an account?</span>
          <a href="/signup" class="ml-1 font-medium text-emerald-200 hover:text-emerald-100 transition-colors">
            Sign up
          </a>
        </div>

        <!-- Continue as Guest -->
        <div class="mt-4 text-center">
          <a href="/" class="text-sm text-emerald-100/60 hover:text-emerald-100/90 transition-colors">
            Continue as guest
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
