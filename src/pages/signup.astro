---
import Layout from "@/layouts/Layout.astro";
import SignupForm from "@/components/auth/SignupForm";

// Check if user is already authenticated
const { user } = Astro.locals;

// If already logged in, redirect to home
if (user) {
  return Astro.redirect("/");
}
---

<Layout title="Sign Up - FootyGuess Daily">
  <div
    class="relative w-full mx-auto min-h-screen bg-gradient-to-br from-green-900 via-emerald-900 to-teal-900 p-4 sm:p-8 flex items-center justify-center"
  >
    <div class="w-full max-w-md">
      <!-- Signup Card -->
      <div
        class="backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 sm:p-10 text-white border border-white/10"
      >
        <!-- Header -->
        <div class="mb-8 text-center">
          <a
            href="/"
            class="inline-block text-3xl font-bold bg-gradient-to-r from-green-200 via-emerald-200 to-teal-200 text-transparent bg-clip-text drop-shadow-lg mb-4 hover:opacity-80 transition-opacity"
          >
            âš½ FootyGuess Daily
          </a>
          <h1 class="text-3xl font-bold text-white mb-2">Create Account</h1>
          <p class="text-emerald-100/80">
            Join the competition and save your scores to the leaderboard
          </p>
        </div>

        <!-- Signup Form -->
        <SignupForm client:load />

        <!-- Login Link -->
        <div class="mt-6 text-center text-sm">
          <span class="text-emerald-100/70">Already have an account?</span>
          <a
            href="/login"
            class="ml-1 font-medium text-emerald-200 hover:text-emerald-100 transition-colors"
          >
            Log in
          </a>
        </div>

        <!-- Continue as Guest -->
        <div class="mt-4 text-center">
          <a
            href="/"
            class="text-sm text-emerald-100/60 hover:text-emerald-100/90 transition-colors"
          >
            Continue as guest
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
