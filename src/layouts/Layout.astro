---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "FootyGuess Daily - Test Your Football Knowledge" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Test your football knowledge! Guess the location and year of iconic football moments. Play daily challenges or unlimited practice rounds."
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
