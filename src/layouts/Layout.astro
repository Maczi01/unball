---
import "../styles/global.css";

interface Props {
  title?: string;
  // showNavigation?: boolean;
}

const { title = "FootyGuess Daily - Test Your Football Knowledge" } = Astro.props;

// Get auth state from middleware
// @typescript-eslint/no-unused-vars
//  Ignore unused variabable with eslint comment
/* eslint-disable no-unused-vars */
const { user } = Astro.locals;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Test your football knowledge! Guess the location and year of iconic football moments. Play daily challenges or unlimited practice rounds."
    />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html {
    height: 100%;
    overflow: hidden;
  }

  body {
    margin: 0;
    padding: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    min-height: 0;
    overflow-y: auto;
    overflow-x: hidden;
  }
</style>
